<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:id="@+id/mcv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="6dp"
        android:clickable="true"
        app:cardElevation="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/vgl_0.25"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/iv_group_logo"
                android:src="@drawable/ic_group_logo"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/vgl_0.25"
                app:layout_constraintDimensionRatio="1"

                />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="20dp"

                android:layout_marginLeft="15dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_group_description"
                app:layout_constraintLeft_toRightOf="@id/iv_group_logo"
                app:layout_constraintVertical_chainStyle="spread"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tv_group_description"
                android:textSize="10dp"

                android:layout_marginLeft="15dp"

                app:layout_constraintTop_toBottomOf="@id/tv_group_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_group_logo"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>